@using TravelProgram.MVC.ViewModels.OrderItemVMs
@model List<OrderItemGetVM>

@{
	int count = 0;
}

<div style="margin-left: 280px" class="main-panel">
	<div class="content-wrapper">
		<div class="row">
			<div class="col-lg-12 grid-margin stretch-card">
				<div class="card">
					<div class="card-body">
						<h4 class="card-title">Order Items Table</h4>
						<a asp-controller="order" asp-action="index" class="btn btn-primary">go back</a>
						<div asp-validation-summary="ModelOnly" style="text-danger"></div>
						<div class="table-responsive">
							<table class="table table-striped">
								<thead>
									<tr>
										<th>
											No
										</th>
										<th>
											Flight
										</th>
										<th>
											Seat
										</th>
										<th>
											Price
										</th>
									</tr>
								</thead>
								<tbody>
									@foreach (var ord in Model)
									{
										count++;
										<tr>
											<td>
												@count
											</td>
											<td>
												@ord.FlightNumber
											</td>
											<td>
												@ord.SeatNumber
											</td>
											<td>
												@ord.Price
											</td>
										</tr>
									}
								</tbody>
							</table>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>
