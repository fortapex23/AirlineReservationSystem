@using TravelProgram.MVC.ViewModels.FlightVMs
@model List<FlightGetVM>

@{
	int count = 0;
}

<div style="margin-left: 280px" class="main-panel">
	<div class="content-wrapper">
		<div class="row">

			<div class="col-lg-12 grid-margin stretch-card">
				<div class="card">
					<div class="card-body">
						<h4 class="card-title">Flight Table</h4>
						<a asp-action="create" class="btn btn-success">Create</a>
						<div asp-validation-summary="ModelOnly" class="text-danger"></div>
						<div class="text-danger" style="margin-top: 10px; margin-bottom: 10px; font-size:larger; font-weight: 600">
							@TempData["Err"]
						</div>
						<div class="table-responsive">
							<table class="table table-striped">
								<thead>
									<tr>
										<th>
											No
										</th>
										<th>
											Number
										</th>
										<th>
											Plane
										</th>
										<th>
											Departure
										</th>
										<th>
											Arrival
										</th>
										<th>
											Departure Time
										</th>
										<th>
											Actions
										</th>
									</tr>
								</thead>
								<tbody>
									@foreach (var flg in Model)
									{
										count++;
										<tr>
											<td>
												@count
											</td>
											<td>
												@flg.FlightNumber
											</td>
											<td>
												@flg.PlaneName
											</td>
											<td>
												@flg.DepartureAirportCity
											</td>
											<td>
												@flg.ArrivalAirportCity
											</td>
											<td>
												@flg.DepartureTime.ToString("MM/ dd/ yyyy - HH:mm")
											</td>
											<td>
												<a asp-action="Update" asp-route-id="@flg.Id" class="btn btn-primary">edit</a>
												<a asp-action="Delete" asp-route-id="@flg.Id" class="btn btn-danger">remove</a>
											</td>

										</tr>
									}
								</tbody>
							</table>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>